  <template name="ctor" value="public $CLASS_NAME$(final $ARG_TYPE$ $ARG_NAME$) {&#10;  this.$ARG_NAME$ = $ARG_NAME$;&#10;}" description="" toReformat="false" toShortenFQNames="true">
